<header class="header">
  <a href="/" class="logo">
    <!-- Add the class icon to your logo image or logo icon to add the margining -->
    AdminLTE
  </a>
  <% if user_signed_in? %>
      <% @conectado = 1 %>
      <%else%>
      <% @conectado = 0 %>
  <%end%>
  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <ul class="nav navbar-nav">
      <% if @conectado == 1 %>
            <li>
              <%= link_to "Productos", products_path, method: :get %>
            </li>

            <li>
              <a href="#">Orden de compra</a>
            </li>
         <li>
            <% if current_user.user_range == 0 %>
                  <li role="presentation" class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                      Administrador <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                      <li class="dropdown-submenu">
                        <a tabindex="-1" href="#">Administrar Usuarios</a>
                        <ul class="dropdown-menu">

                          <li><%= link_to "Agregar Usuario", new_user_path %></li>
                          <li><%= link_to "Ver Usuarios", users_path, method: :get %></li>
                        </ul>
                      </li>
                      <li class="dropdown-submenu">
                        <a tabindex="-1" href="#">Administrar Proveedores</a>
                        <ul class="dropdown-menu">

                          <li><%= link_to "Agregar Proveedor", new_provider_path, method: :get %></li>
                          <li><%= link_to "Ver Proveedores", providers_path, method: :get %></li>
                        </ul>
                      </li>
                      <li class="dropdown-submenu">
                        <a tabindex="-1" href="#">Administrar Ciudades</a>
                        <ul class="dropdown-menu">

                          <li><%= link_to "Agregar Ciudad", new_city_path, method: :get %></li>
                          <li><%= link_to "Ver Ciudades", cities_path, method: :get %></li>
                        </ul>
                      </li>
                      <li class="dropdown-submenu">
                        <a tabindex="-1" href="#">Administrar Regiones</a>
                        <ul class="dropdown-menu">

                          <li><%= link_to "Agregar Region", new_region_path %></li>
                          <li><%= link_to "Ver Regiones", regions_path, method: :get %></li>
                        </ul>
                      </li>
                      <li class="dropdown-submenu">
                        <a tabindex="-1" href="#">Administrar Marcas</a>
                        <ul class="dropdown-menu">

                          <li><%= link_to "Agregar Marca", new_brand_path %></li>
                          <li><%= link_to "Ver Marcas", brands_path, method: :get %></li>
                        </ul>
                      </li>
                      <li class="dropdown-submenu">
                        <a tabindex="-1" href="#">Administrar Categorias</a>
                        <ul class="dropdown-menu">

                          <li><%= link_to "Agregar Categoria", new_category_path %></li>
                          <li><%= link_to "Ver Categorias", categories_path, method: :get %></li>
                        </ul>
                      </li>

                    </ul>
                  </li>

            <%end%>
         </li>
       <%end%>
        <li><a> <% if @conectado == 1 %>
              <span><%= current_user.email%><i class="caret"></i></span>
          <%end%>
        </a>
        </li>
        <li><% if user_signed_in? %>
              <%= link_to "Desconectarse", destroy_user_session_path, method: :delete %>
          <%else%>
              <%= link_to "Ingrese a su cuenta", new_user_session_path %>
          <%end%>
        </li>
      </ul>
    </div>
  </nav>
</header>