<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Purchases <small>#new</small></h1>
  </section>
<% end %>

<section class="content invoice">
	<%= form_for @purchase do |f| %>
    <div class="form-group">
            <%= f.label "Ingrese nombre del proveedor" %>
            <%= f.collection_select(:provider_id, Provider.all, :id, :provider_name, include_blank: true) %>
          </div>
         <div><%= f.submit "Filtrar" %> </div>
  <%end%>
</section>