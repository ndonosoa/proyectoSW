<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, :url => { :action => :create} do |f| %>

      <%= f.label :rut %>
      <%= f.text_field :rut_user, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password_user, class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>