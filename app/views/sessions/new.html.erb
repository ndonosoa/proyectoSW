<div class="row">
	<div class="col-md-7">
		<div class="text-center m-b-md">
			<h3>Bienvenido a AppStock</h3>
		</div>
		<div class="hpanel">
			<div class="panel-body">
				<form action="/login" method="POST">
					<div class="form-group">
						<label class="control-label" for="rut_user_form">Ingrese su Rut</label>
						<input type="text" placeholder="XXXXXXXX-X" title="Por favor ingrese su rut" required="" value="<%= @error_rut_value%>" name="rut_user" id="rut_user" class="form-control" pattern="^[1-9][0-9]{5,7}-[0-9|kK]">
						<span class="help-block small text-danger" id="error_rut_user"><%= @error_rut_message%></span>
					</div>
					<div class="form-group">
						<label class="control-label" for="password">Password</label>
						<input type="password" title="Por favor ingrese su password" placeholder="******" required="" value="" name="password_user" id="password_user" class="form-control">
						<span class="help-block small text-danger" id="error_password_user"><%= @error_password_message %></span>
					</div>

					<button class="btn btn-success" id="btn_login">Login</button>

				</form>
			</div>
		</div>
	</div>
</div>
<% content_for :js do%>
<script>
$(document).on('keypress', ':input', function(){
  var a = $(this).attr('name');
  $('#error_'+a).text('');
});
</script>
<%end%>











