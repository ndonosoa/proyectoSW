<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Products <small>#update</small></h1>
  </section>
<% end %>

<section class="content invoice">
	<%= form_for (@product) do |f| %>
  		<div class="form-group">
            <%= f.label "Ingrese nombre del proveedor" %>
            <%= f.collection_select(:provider_id, Provider.all, :id, :provider_name, include_blank: true) %>
          </div>
		  <div class="form-group">
            <%= label_tag 'Ingrese Precio del producto' %>
            <%= text_field_tag :asd%>
          </div>
         <div><%= @product.product_name%> </div>
         <div>
         	<%= f.submit "Actualizar" %>
         </div>
    <%end%>
</section>