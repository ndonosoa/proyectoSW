<% content_for :css do %>
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.2.4/css/buttons.dataTables.min.css">
<%end%>


<div id="contenedor_principal" class="row">
  <div class="col-lg-12">

    <div id="contenedor_datos" class="hpanel ">
      <div class="panel-body  card-box">
      <% if session[:current_user] == 0 %>
        <button title="Agregar nuevo Producto" id="modal_nuevo" type="button" class="btn btn-success hide_on_small">Nuevo</button>
      <%end%>  
        <br><br>
        <table id="datatables" class="table table-striped table-bordered table-hover dataTable no-footer" width="100%" role="grid" style="width: 100%;">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Código</th>
              <th>Precio</th>
              <th>Proveedor</th>
              <th>Categoria</th>
              <th>Marca</th> 
            <% if session[:current_user] == 0 %>             
              <th style="width:15%;">Acción</th>
            <%end%>  
            </tr>
          </thead>
        </table>
      </div>
    </div>

  </div>
</div>

    <div class="modal fade" id="modal_new_edit" role="dialog" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="color-line"></div>
          <div id="contenido-modal">
            <div class="modal-header text-center">
              <h4 id="title_form" class="modal-title"></h4>
            </div>
            <div class="modal-body">
              <form id="form-registro" action="products" method="post" class="form-horizontal">
                <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                <input type="hidden" id="form_method" name="_method"  value="patch">
                <input type="hidden" id="form_tipo" name="form_tipo">
                <input type="hidden" id="form_id_model" name="form_id_model">
                <div class="form-group">
                  <label class="col-sm-2 control-label">Nombre</label>
                  <div class="col-sm-10">
                    <input id="nombre_product_form" name="product[name_product]" type="text" required class="form-control" autocomplete="off">
                    <span id="error_nombre_product" class="help-block text-danger"></span>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label">Código</label>
                  <div class="col-sm-10">
                    <input id="code_product_form" name="product[code_product]" type="text" pattern="^([0-9]){5,13}$"  required class="form-control" autocomplete="off">
                    <span id="error_nombre_product" class="help-block text-danger"></span>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label">Precio</label>
                  <div class="col-sm-10">
                    <input type="text" pattern="^([0-9]){1,8}$" id="price_product_form" name="product[price_product]" type="text" required class="form-control" autocomplete="off">
                    <span id="error_price_product" class="help-block text-danger"></span>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label">Proveedor</label>
                  <div class="col-sm-10">
                    <select name="product[provider_id]" id="provider_id_form" class="form-control m-b">
                     <% @providers.each do |provider| %>
                     <option value="<%=provider.id%>"><%= provider.name_provider%></option>
                     <%end%>
                   </select>
                   <span id="error_nombre_product" class="help-block text-danger"></span>
                 </div>

               </div>
               <div class="form-group">
                <label class="col-sm-2 control-label">Categoria</label>
                <div class="col-sm-10">
                  <select name="product[category_id]" id="category_id_form" class="form-control m-b">
                   <% @categories.each do |category| %>
                   <option value="<%=category.id%>"><%= category.name_category%></option>
                   <%end%>
                 </select>
                 <span id="error_category_product" class="help-block text-danger"></span>
               </div>

             </div>
             <div class="form-group">
              <label class="col-sm-2 control-label">Marca</label>
              <div class="col-sm-10">
                <select name="product[brand_id]" id="brand_id_form" class="form-control m-b">
                 <% @brands.each do |brand| %>
                 <option value="<%=brand.id%>"><%= brand.name_brand%></option>
                 <%end%>

               </select>
               <span id="error_brand_product" class="help-block text-danger"></span>
             </div>
           </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"  style="margin-right:20px;">Cancelar</button>
                <button type="submit" class="btn btn-primary">Guardar</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
<form action="products/:campo_id" id="form_delete" method="post">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <input type="hidden" name="_method" value="delete">
</form>



<% content_for :js do%>
<script src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
<script src="/vendor/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<script src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.2.4/js/dataTables.buttons.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
<script src="//cdn.rawgit.com/bpampuch/pdfmake/0.1.24/build/pdfmake.min.js"></script>
<script src="//cdn.rawgit.com/bpampuch/pdfmake/0.1.24/build/vfs_fonts.js"></script>
<script src="//cdn.datatables.net/buttons/1.2.4/js/buttons.html5.min.js"></script>
<script src="/vendor/products.js"></script>

<script>
 <%if session[:current_user] == 1 %>
  $(function () {
  $('#datatables').dataTable({
     "ajax": "/products/json/getproducts",
     "sAjaxDataProp": "productos",
     "dom": 'Bfrtip',
     "buttons": ['excelHtml5', 'pdfHtml5'],
     "columns": [
        {"data":"name_product"},
        {"data":"code_product"},
        {"data":"price_product"},
        {"data":"name_provider"},           
        {"data": "name_category" },
        {"data": "name_brand" },
     ],
  });
});
<%else%>
$(function () {
  $('#datatables').dataTable({
     "ajax": "/products/json/getproducts",
     "sAjaxDataProp": "productos",
     "dom": 'Bfrtip',
     "buttons": ['excelHtml5', 'pdfHtml5'],
      "columns": [
        {"data":"name_product"},
        {"data":"code_product"},
        {"data":"price_product"},
        {"data":"name_provider"},           
        {"data": "name_category" },
        {"data": "name_brand" },
        { "data": "id", 
        "sClass": "text-center","orderable": false,"searchable": false,
           "render": function(data,type,row,meta){
              return '<button data-id="'+row.id+'" class="btn btn-xs btn-primary2 revisar_ficha hide_on_big"><i class="fa fa-address-card-o fa-2"></i></button>                                 <button title="Ver Ficha" data-id="'+row.id+'" class="btn btn-xs btn-primary2 hide_on_small revisar_ficha_big"><i class="fa fa-paste"></i></button>   <button title="Editar" class="btn btn-xs btn-info modal_editar hide_on_small" type="button" data-id="'+row.id+'"><i class="fa fa-pencil"></i></button>  <button title="Eliminar" class="btn btn-xs btn-danger hide_on_small" data-campo="'+row.id+'" type="button"><i class="fa fa-trash-o"></i> <span class="bold"></span></button>'
           }
        } 
     ],
  });
});
<%end%>
</script>


<%end%>

