<%= render 'form' %>

<section class="content invoice">
	<%= form_for(@city) do |f| %>
      <% @city.errors.full_messages.each do |message| %>
        <div>
          * <%= message %>
        </div>
      <%end%>
      <div class="row">
        <div class="form-group">
          <%= f.label "Región a la que pertenece" %>
          <%= f.collection_select(:region_id, Region.all, :id, :region_name, include_blank: true) %>
          <%= link_to "¿No la encuentras? Agrégala", new_region_path, method: :get %>
        </div>
        <div class="form-group">
          <%= f.label "Ingrese nombre de ciudad" %>
          <%= f.text_field :city_name %>

        </div>
        <div class="field">
  	   			<%= f.submit "Guardar"%>
        </div>
      </div>
  	<%end%>
</section>